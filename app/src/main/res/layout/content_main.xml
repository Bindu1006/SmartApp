<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainbackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.shrutib.smartapp.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/firstRow"
        android:id="@+id/secondRow">

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/sensorsBtn"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:text="Sensors"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/edittext"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/securityBtn"
            android:layout_toRightOf="@+id/sensorsBtn"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="Security"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/edittext"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/secondRow"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/energyBtn"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:text="Energy"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/edittext"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/dashboardBtn"
            android:layout_toRightOf="@+id/energyBtn"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="Dashboard"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/edittext"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:id="@+id/firstRow"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/lightBtn"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:text="Lighting"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/edittext"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/videoBtn"
            android:layout_toRightOf="@+id/lightBtn"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="Video"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/edittext"/>

    </RelativeLayout>


</RelativeLayout>
